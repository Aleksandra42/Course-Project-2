<Window x:Class="RiskApp.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskApp"
        mc:Ignorable="d"
        Title="Project Selection Window" Height="530" Width="410.329" Activated="Window_Activated" ResizeMode="NoResize" Background="#FFC0D4F0">
    <Grid Margin="0,0,-25.8,-20">
        <ListBox x:Name="listBox" Margin="28,89,50.8,81" MouseDoubleClick="ListBox_MouseDoubleClick" RenderTransformOrigin="0.383,0.493"/>
        <Label x:Name="label" Content="Your Projects" HorizontalAlignment="Left" Margin="143,37,0,0"
               FontSize="20" VerticalAlignment="Top" Height="41" Width="135"/>
        <Button x:Name="BackButton" Margin="28,23,0,0" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Click="BackButton_Click" RenderTransformOrigin="-0.646,-0.06">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
